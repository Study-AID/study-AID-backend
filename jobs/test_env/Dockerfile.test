FROM python:3.11-slim

WORKDIR /app

# 필요한 시스템 패키지 설치
RUN apt-get update && apt-get install -y \
    curl \
    gcc \
    g++ \
    make \
    && rm -rf /var/lib/apt/lists/*

# 필요한 Python 패키지 설치
RUN pip install --no-cache-dir \
    boto3==1.34.13 \
    psycopg2-binary==2.9.9 \
    pyyaml==6.0.1 \
    pymupdf==1.23.8 \
    openai==1.12.0 \
    reportlab==3.6.13 \
    httpx==0.27.2

# PYTHONPATH 설정
ENV PYTHONPATH=/app
